pipeline {
    agent any
	tools {
		maven 'Maven home'
		}
    stages {
        stage('SCM-Checkout') {
            steps {
                git branch: 'main', credentialsId: 'git-credentials', 
                url: 'https://github.com/gkvmware03/git-maven-jenkins-ansible.git'
            }
        }
        stage('Clean-compile') {
            steps {
				sh "mvn clean compile"
            }
        }
        stage('Package') {
            steps {
				sh "mvn package"
            }
        }
        stage('Ansible-Deployment') {
            steps {
				ansiblePlaybook become: true, credentialsId: 'ansadmin', disableHostKeyChecking: true, installation: 'ansible', inventory: 'hosts', playbook: 'httpd.yml'
            }
        }
    }
}
